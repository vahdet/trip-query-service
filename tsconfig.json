{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "dist",
    // "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["jest.config.ts"]
}
